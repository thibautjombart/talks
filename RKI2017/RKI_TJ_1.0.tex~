\begin{frame}[fragile]
  \frametitle{RECON: activities}

  \begin{block}{Statistical software}
    \begin{itemize} 
    \item \alert{efficiency}: useful for improving situation awareness in real time
      %% \pause
      \vspace{.1cm}
    \item \alert{reliability}: outputs can be trusted
      %% \pause
      \vspace{.1cm}
    \item \alert{accessibility}: widely available, easy learning curve
    \end{itemize}
  \end{block}

  \pause
  
  \begin{block}{Translation}
    \begin{itemize} 
    \item \alert{disseminating knowledge}: free online training material,
      involvement with FETPs, workshops
      %% \pause
      \vspace{.1cm}
    \item \alert{supporting response}: portable data analysis environment, deployment to the field 
    \end{itemize}
  \end{block}

  
\end{frame}
